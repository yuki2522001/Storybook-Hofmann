{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"], // require or disallow semicolons instead of ASI
        "@typescript-eslint/quotes": ["error", "double"], // 	enforce the consistent use of either backticks, double, or single quotes
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }] // The set of allowed extensions is configurable.
    }
}